<section class="about-section-bg min-h-screen flex items-center justify-center px-4 py-12 animate-fade-slide">
  <div class="bg-white/10 border border-white/20 backdrop-blur-md rounded-xl w-full max-w-md p-8 text-white">
    <h2 class="text-2xl font-bold mb-6 text-center">Editar Perfil</h2>

    <form action="/perfil/editar" method="POST" class="space-y-5">
      <!-- ID oculto -->
      <input type="hidden" name="id" value="{{user.id}}" />

      <!-- Nome -->
      <div>
        <label for="nome" class="block text-sm font-medium text-white">Nome</label>
        <input
          type="text"
          id="nome"
          name="nome"
          value="{{user.nome}}"
          required
          class="mt-1 block w-full rounded-md border border-gray-300 bg-white/20 text-white placeholder-white/60 p-2 focus:ring-white focus:border-white backdrop-blur"
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-medium text-white">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          value="{{user.email}}"
          required
          class="mt-1 block w-full rounded-md border border-gray-300 bg-white/20 text-white placeholder-white/60 p-2 focus:ring-white focus:border-white backdrop-blur"
        />
      </div>

      <!-- Senha (opcional) -->
      <div>
        <label for="password" class="block text-sm font-medium text-white">
          Nova senha <span class="text-sm text-white/60">(opcional)</span>
        </label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="********"
          class="mt-1 block w-full rounded-md border border-gray-300 bg-white/20 text-white placeholder-white/60 p-2 focus:ring-white focus:border-white backdrop-blur"
        />
      </div>

      <!-- BotÃµes -->
      <div class="flex justify-between gap-4 pt-4">
        <a href="/dashboard"
           class="w-1/2 text-center border border-white text-white py-2 rounded-md hover:bg-white hover:text-[#1D3273] transition duration-300">
          Voltar
        </a>
        <button
          type="submit"
          class="w-1/2 bg-[#1D3273] text-white font-semibold py-2 px-4 rounded-md hover:bg-[#1D3273]/90 transition duration-300"
        >
          Salvar
        </button>
      </div>
    </form>
  </div>
</section>
